// Rename this config.example.json file to config.json
{
    "dev_mode": false, // Set to true to develop locally using FakeRPi module
    "satori": {
        "endpoint": "YOUR_ENDPOINT",
        "appkey": "YOUR_APPKEY",
        "role": "YOUR_ROLE", // If needed
        "role_secret_key": "YOUR_ROLE_SECRET" // If needed
    },
    "channels": {
        "in": "raspberry.in", // The name of the channel from which the Raspberry Pi will receive commands
        "out": "raspberry.out" // The name of the channel to which the Raspberry Pi will output data
    },
    "skills": {
        "general": { // Skill ID
            "package": "satori_raspberry.skills.general", // Package to be imported via "import"
            "actions": [ // Allowed actions (methods of your Skill class)
                "ping", "test"
            ]
        }
    }
}
